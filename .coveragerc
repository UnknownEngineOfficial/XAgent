# Coverage.py configuration file
# Central control point for test coverage

[run]
source = src/xagent
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    */dist-packages/*
branch = True

[report]
# Target: minimum 90% coverage
precision = 2
show_missing = True
skip_covered = False
skip_empty = True

# Fail if coverage is below 90%
fail_under = 90

exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod

[html]
directory = htmlcov
title = X-Agent Test Coverage Report

[xml]
output = coverage.xml
